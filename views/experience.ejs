<% layout("layouts/boilerplate") %>

<style>
  .experience-header {
    background: url('https://images.unsplash.com/photo-1542314831-068cd1dbfeeb?ixlib=rb-4.0.3&auto=format&fit=crop&w=1350&q=80') 
                no-repeat center center;
    background-size: cover;
    height: 65vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
  }

  .experience-header h1 {
    font-size: 3rem;
    font-weight: 700;
    text-shadow: 2px 2px 10px rgba(0,0,0,0.7);
  }

  .exp-card {
    border-radius: 16px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .exp-card:hover {
    transform: translateY(-5px);
    box-shadow: 0px 8px 20px rgba(0,0,0,0.2);
  }

  .exp-card img {
    width: 100%;
    height: 220px;
    object-fit: cover;
  }

  .exp-card-body {
    padding: 15px;
  }

  .exp-card-body h5 {
    font-weight: 700;
    margin-bottom: 10px;
  }

  .exp-card-body p {
    font-size: 0.95rem;
    color: #6c757d;
  }

  .exp-card-body .price {
    font-weight: 600;
    color: #0d6efd;
  }
</style>

<!-- Header Section -->
<header class="experience-header">
  <div>
