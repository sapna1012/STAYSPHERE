<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>StaySphere</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <style>
    /* Overlay blur effect */
    .menu-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(255, 255, 255, 0.6);
      backdrop-filter: blur(6px);
      z-index: 998;
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.3s ease, visibility 0.3s ease;
    }

    .menu-overlay.active {
      opacity: 1;
      visibility: visible;
    }

    /* Navbar menu above overlay */
    .navbar-collapse {
      z-index: 999;
      position: relative;
    }

    /* Increase spacing and size of nav links */
    .navbar-nav .nav-link {
      font-size: 1.1rem;
      font-weight: 600;
      margin: 0 12px;
      padding: 8px 10px;
    }

    .navbar-nav .nav-link:hover {
      color: #0d6efd;
      text-decoration: underline;
    }

    @media(min-width: 992px){
      .menu-overlay { display: none; }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-2">
    <div class="container d-flex justify-content-between align-items-center">

      <!-- Left: Logo -->
      <a class="navbar-brand d-flex align-items-center" href="/listings">
        <i class="fa-solid fa-compass me-2 logo-icon"></i>
        <span class="fw-bold">StaySphere</span>
      </a>

      <!-- Toggle for Mobile -->
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Links + Buttons -->
      <div class="collapse navbar-collapse" id="navbarNav">
        <!-- Center Nav Links -->
        <ul class="navbar-nav mx-auto">
          <li class="nav-item"><a class="nav-link fw-semibold" href="/listings">üè† Homes</a></li>
          <li class="nav-item"><a class="nav-link fw-semibold" href="/services">üçΩÔ∏è Services</a></li>
          <li class="nav-item"><a class="nav-link fw-semibold" href="/experience">‚õ∞Ô∏è Experiences</a></li>
          <li class="nav-item"><a class="nav-link fw-semibold" href="/about">‚ÑπÔ∏è About</a></li>
        </ul>

        <!-- Right Buttons -->
        <div class="d-flex align-items-center gap-2">
          <!-- Become a Host -->
          <a href="/listings/new" class="btn btn-outline-primary fw-bold">Become a Host</a>

          <% if (!currUser) { %>
            <!-- Sign Up / Log In -->
            <a href="/signup" class="btn btn-outline-dark">Sign Up</a>
            <a href="/login" class="btn btn-dark">Log In</a>
          <% } else { %>
            <!-- Direct Logout Button -->
            <form action="/logout" method="POST" class="d-inline">
              <button class="btn btn-dark fw-bold" type="submit">Logout</button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <!-- Blur Overlay -->
  <div class="menu-overlay"></div>

  <!-- Bootstrap JS + Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const navbarCollapse = document.getElementById("navbarNav");
    const overlay = document.querySelector(".menu-overlay");

    // Show overlay when mobile menu opens
    navbarCollapse.addEventListener("show.bs.collapse", () => {
      overlay.classList.add("active");
    });

    // Hide overlay when mobile menu closes
    navbarCollapse.addEventListener("hide.bs.collapse", () => {
      overlay.classList.remove("active");
    });

    // Clicking overlay closes the mobile menu
    overlay.addEventListener("click", () => {
      const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
      if(bsCollapse) bsCollapse.hide();
    });
  </script>
</body>
</html>
